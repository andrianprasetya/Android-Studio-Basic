<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_detail">
    <include android:id="@+id/toolbar"
        layout="@layout/toolbar">
    </include>
    <androidx.cardview.widget.CardView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:id="@+id/card_detail"
        card_view:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_detail_name"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:text="@string/nama_universitas"/>
            <ImageView
                android:layout_below="@+id/tv_detail_name"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/img_detail"
                android:padding="10dp"
                android:src="@drawable/ic_launcher_background"/>

            <TextView
                android:id="@+id/tv_detail_peringkat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_detail"
                android:layout_marginLeft="50dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="-1dp"
                android:text="@string/peringkat"
                android:textSize="11sp" />

            <TextView
                android:layout_toEndOf="@+id/tv_detail_peringkat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/Nasional"
                android:textStyle="italic"
                android:textSize="11sp"
                android:layout_below="@+id/img_detail"/>
            <TextView
                android:id="@+id/tv_detail_klaster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="@string/klaster"
                android:textSize="11sp"
                android:layout_marginRight="50dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/img_detail"/>
            <TextView
                android:id="@+id/tv_detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:padding="20dp"
                android:text="@string/description"
                android:layout_below="@+id/tv_detail_klaster"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>